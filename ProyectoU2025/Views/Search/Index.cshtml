@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Leaflet-->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<link href="~/css/MyMap.css" rel="stylesheet" />

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="container mt-4">
        <div class="row">
            <!-- Search -->
            <div class="col-md-6 d-flex">
                <div class="card shadow-sm w-100 h-400">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <div class="text-center">
                                <i class="fas fa-search-location fa-2x"></i>
                                <h1 class="h3 mb-3 ">Buscar Salón</h1>
                            </div>

                            <div class="row">
                                <div class="col-12 mb-3">
                                    <select class="form-control form-control-user" id="SelecSearcht">
                                        <option value="">Seleccione una opción</option>
                                        @* <option value="clase">Clase</option> *@
                                        <option value="asignatura">Asignatura</option>
                                        <option value="docente">Docente</option>
                                        <option value="salon">Salón</option>
                                    </select>
                                </div>

                                <div class="col-12 mb-3">
                                    <input type="text" class="form-control form-control-user" id="ValueSearch" placeholder="Ingrese valor">
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button id="btn-buscar-info" class="btn btn-success btn-sm">BUSCAR</button>
                        </div>

                        <div>
                            <h4>Resultado de la busqueda</h4>
                            <section class="response">

                            </section>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Segunda tarjeta: Ubicación -->
                        <div class="col-md-6">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <div class="text-center">
                                        <i class="fas fa-map-marker-alt fa-2x"></i>
                                        <h1 class="h3 mb-3 text-gray-800">Ubicación</h1>
                                    </div>

                                    <div id="carouselUbicacion" class="carousel slide mb-3" data-ride="carousel" >
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img src=<img src="https://rep-file.sagerp.cloud:54678/Pruebas/Ed_Central.jpeg" class="d-block w-100" alt="Imagen 1">
                                            </div>
                                            <div class="carousel-item">
                                                <img src=<img src="https://rep-file.sagerp.cloud:54678/Pruebas/imagen1.jpg" class="d-block w-100" alt="Imagen 2">
                                            </div>
                                        </div>
                        
                                        <!-- Botones negros personalizados -->
                                        <a class="carousel-control-prev" href="#carouselUbicacion" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                                            <span class="sr-only">Anterior</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselUbicacion" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                                            <span class="sr-only">Siguiente</span>
                                        </a>
                                    </div>
                        
                                    <div class="text-center">
                                        <button class="btn btn-success btn-sm">VER UBICACIÓN EN MAPA</button>
                                    </div>
                                </div>
                            </div>
                        </div>
            <!-- End of Main Content -->
        </div>
    </div>
</div>

<!-- Diálogo para mensajes de validación -->
<dialog id="validationDialog" class="dialog">
    <div class="dialog-content">
        <h3 id="dialogTitle">Error</h3>
        <p id="dialogMessage"></p>
        <button id="closeDialogButton" class="btn btn-primary">Cerrar</button>
    </div>
</dialog>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="~/js/MyMap.js"></script>
    <script src="~/js/Search/Search.js"></script>
}
