@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CampusNav - Login</title>

    <!-- Bootstrap 4.6 -->
    <link href="~/css/style.min.css" rel="stylesheet" />

    <!-- Estilos personalizados -->
    <link href="~/css/login.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <img src="~/img/logo.png" alt="CampusNav Logo" class="logo" />

            <div class="input-group">
                <i class="bi bi-person input-icon"></i>
                <input type="text" placeholder="Correo electrónico" />
            </div>

            <div class="input-group">
                <i class="bi bi-lock input-icon"></i>
                <input type="password" placeholder="Contraseña" />
            </div>

            <a asp-controller="Profile" asp-action="Index" class="btn-login">INGRESAR</a>

            <div class="text-center">
                <a href="#" class="forgot-link">¿Olvidaste tu contraseña?</a>
            </div>

            <div class="google-login">
                <button class="btn-google">
                    <img src="~/img/logo-google.png" alt="Google Logo" />
                    Ingresar con Google
                </button>
            </div>
        </div>

        <img src="~/img/logo-icono.png" alt="CampusNav Icon" class="corner-logo" />
    </div>
</body>
</html>
